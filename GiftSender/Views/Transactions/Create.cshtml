@model TransactionFormModel

@{
    ViewBag.Title = "Create Transaction";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <h4 class="heading-margin text-center">Your credits are : @Model.CurrentCredits</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">

            <div class="form-group">
                <label asp-for="ReceiverId">Send to</label>
                <select asp-for="ReceiverId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id">@user.MobileNumber / @user.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Credits"></label>
                <input asp-for="Credits" class="form-control" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Massage"></label>
                <input asp-for="Massage" class="form-control" />
                <span asp-validation-for="Massage" class="text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Sent" />

        </form>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
