@model TransactionsListViewModel

@{
    ViewBag.Title = "All Transactions Incoming";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1 class="heading-margin text-center">@ViewBag.Title</h1>

<table class="table table-striped">

    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Created On</th>
            <th scope="col">Sender Name</th>
            <th scope="col">Credits</th>
            <th scope="col">Massage</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td scope="col">@transaction.Id</td>
                <td scope="col">@transaction.CreatedOn</td>
                <td scope="col">@transaction.SenderName</td>
                <td scope="col">@transaction.Credits</td>
                <td scope="col">@transaction.Massage</td>
            </tr>
        }
    </tbody>

</table>
<hr />

<partial name="_PagingPartial" model="@Model" />