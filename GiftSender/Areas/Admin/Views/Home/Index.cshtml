

@{
    ViewBag.Title = "Admin Index Page";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1 class="mb-4 text-center">Admin Area</h1>

<div class="row">
    <div class="col-lg-3 col-6">

        <div class="small-box bg-info">
            <div class="inner">
                <h3></h3>
                <p>User Registrations</p>
            </div>
           <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a asp-area="Admin" asp-controller="Users" asp-action="All" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">

        <div class="small-box bg-success">
            <div class="inner">
               <h3></h3>
                <p>Transactions</p>
            </div>
            <div class="icon">
                <i class="ion ion-hammer-outline"></i>
            </div>
            <a asp-area="Admin" asp-controller="Transactions" asp-action="All" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

   

</div>